<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.mingy.jcm.ui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="JCM Perspective"
            class="org.mingy.jcm.ui.Perspective"
            id="org.mingy.jcm.ui.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.mingy.jcm.ui.TeacherEditor"
            id="org.mingy.jcm.ui.TeacherEditor"
            name="教师维护">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.mingy.jcm.ui.ResourceView"
            id="org.mingy.jcm.ui.ResourceView"
            name="资源浏览">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Resource"
            id="org.mingy.jcm.ui.resource">
      </category>
      <category
            name="Assistant"
            id="org.mingy.jcm.ui.assistant">
      </category>
      <command
            name="资源浏览"
            description="打开资源浏览视图"
            categoryId="org.mingy.jcm.ui.resource"
            id="org.mingy.jcm.ui.openResource">
      </command>
      <command
            name="控制台"
            description="打开控制台以显示日志"
            categoryId="org.mingy.jcm.ui.assistant"
            id="org.mingy.jcm.ui.openConsole">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.mingy.jcm.ui.openResource"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+R">
      </key>
      <key
            commandId="org.mingy.jcm.ui.openConsole"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+L">
      </key>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.mingy.jcm.application"
            name="Courses Manager for Java">
         <property
               name="aboutText"
               value="Courses Manager for Java">
         </property>
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="aboutImage"
               value="icons/alt_about.gif">
         </property>
         <property
               name="appName"
               value="Courses Manager for Java">
         </property>
      </product>
   </extension>

</plugin>
